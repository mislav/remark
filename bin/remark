#!/usr/bin/env ruby
require 'optparse'
require 'remark'

options = {}
OptionParser.new do |opts|
  opts.banner = "Usage: remark [options] [FILE]"

  opts.on("-i", "--inline-links", "Render link URLs inline (instead of reference-style)") do |inline|
    options[:inline_links] = inline
  end
  
  opts.on("-s", "--scope EXPR", "Scope to a spefic CSS/XPath expression in the HTML document") do |scope|
    options[:scope] = scope
  end
end.parse!

puts Remark.new(ARGF.read, options).to_markdown
